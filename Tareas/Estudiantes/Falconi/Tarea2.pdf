//EJERCICIO 3
const double pi = 3.14;

double area = 0;

Console.WriteLine("Digite el valor del radio: ");
double radio = double.Parse(Console.ReadLine()!);

double CalcularAreaCirculo(double radio){
    return area = pi * radio * radio;
}

Console.WriteLine("El valor del area del circulo es: " + CalcularAreaCirculo(radio).ToString("F2"));

//EJERCICIO 4
Console.WriteLine("Ingrese el primer numero: ");
double num1 = Convert.ToDouble(Console.ReadLine());

Console.WriteLine("Ingrese el segundo numero: ");
double num2 = Convert.ToDouble(Console.ReadLine());

double Sumar(double num1, double num2){
    return num1 + num2;
}
double Multiplicar(double num1, double num2){
    return num1 * num2;
}
double Dividir(double num1, double num2){
    return num1 / num2;
}

Console.WriteLine("El resultado en la suma es: " + Sumar(num1, num2));
Console.WriteLine("El resultado en la multiplicacion es: " + Multiplicar(num1, num2));
Console.WriteLine("El resultado en la division es: " + Dividir(num1, num2));

